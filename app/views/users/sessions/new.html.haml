.container.mt-4.d-none.d-xl-block{style: 'margin-left: 400px; max-width: 800px;'}
  %h3.mb-4 ログイン
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-group
      = f.label 'e-mail', for: 'exampleInputEmail1'
      = f.text_field :email, autofocus: true, autocomplete: 'email', id: 'exampleInputEmail1', class: 'form-control', placeholder: 'E-mail'
    .form-group
      = f.label 'パスワード', for: 'password'
      = f.password_field :password, id: 'password', class: 'form-control', autocomplete: "パスワード"
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    .form-group.mt-3
      = f.button 'ログイン', class: 'btn btn-info'
  = render "users/shared/links"
